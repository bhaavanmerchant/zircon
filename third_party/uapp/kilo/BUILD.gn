executable("kilo") {
  sources = [
    "kilo.c",
  ]
  configs += [ ":config" ]
  deps = [
    "$zx/system/ulib/fdio",
  ]
}

config("config") {
  visibility = [ ":*" ]
  if (is_gcc) {
    cflags_c = [ "-Wno-discarded-qualifiers" ]
  } else {
    cflags = [ "-Wno-incompatible-pointer-types-discards-qualifiers" ]
  }
}
