library("pcie") {
  kernel = true
  sources = [
    "debug.cpp",
    "pci_config.cpp",
    "pcie_bridge.cpp",
    "pcie_bus_driver.cpp",
    "pcie_caps.cpp",
    "pcie_device.cpp",
    "pcie_irqs.cpp",
    "pcie_quirks.cpp",
    "pcie_root.cpp",
    "pcie_upstream_node.cpp",
  ]
  deps = [
    "$zx/kernel/lib/fbl",
    "$zx/kernel/lib/pci",
    "$zx/system/ulib/region-alloc",
    "$zx/system/ulib/zxcpp",
  ]

  # TODO(mcgrathr): Say why this is needed.
  cflags_cc = [ "-Wno-invalid-offsetof" ]
}
