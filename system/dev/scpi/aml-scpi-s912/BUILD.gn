group("aml-scpi-s912") {
  deps = [
    ":aml-scpi-s912.mailbox",
    ":aml-scpi-s912.scpi",
  ]
}

driver("aml-scpi-s912.mailbox") {
  sources = [
    "aml-mailbox.c",
  ]
  deps += [
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
  ]
}

driver("aml-scpi-s912.scpi") {
  sources = [
    "aml-scpi.c",
  ]
  deps += [
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
  ]
}
