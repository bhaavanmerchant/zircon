driver("broker") {
  sources = [
    "bind.c",
    "broker.cpp",
  ]
  deps += [
    "$zx/system/fidl/zircon-nand:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxcpp",
  ]
}

test_driver("nand-test") {
  sources = [
    "test/broker-test.cpp",
    "test/main.cpp",
  ]
  deps += [
    "$zx/system/fidl/zircon-nand:c",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fzl",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxcpp",
  ]
}
