group("imx8") {
  deps = [
    ":imx8.m",
    ":imx8.m-mini",
  ]
}

driver("imx8.m") {
  sources = [
    "imx8m-gpio.c",
  ]
  deps += [
    ":common",
    "$zx/system/dev/lib/imx8m",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
  ]
}

driver("imx8.m-mini") {
  sources = [
    "imx8m-mini-gpio.c",
  ]
  deps += [
    ":common",
    "$zx/system/dev/lib/imx8m",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/zircon",
  ]
}

source_set("common") {
  visibility = [ ":*" ]
  sources = [
    "imx8-gpio.c",
  ]
  deps += [
    "$zx/system/dev/lib/imx8m",
    "$zx/system/ulib/ddk",
  ]
}
