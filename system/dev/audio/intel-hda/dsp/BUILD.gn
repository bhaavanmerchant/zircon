    "binding.c",
    "debug.cpp",
    "intel-audio-dsp.cpp",
    "intel-dsp-code-loader.cpp",
    "intel-dsp-ipc.cpp",
    "intel-dsp-stream.cpp",
    "intel-dsp-topology.cpp",
  ]
  deps = [
    "$zx/system/banjo/ddk-protocol-intel-hda-codec",
