    "$zx/system/ulib/audio-proto-utils",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/dispatcher-pool",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fzl",
    "$zx/system/ulib/intel-hda",
    "$zx/system/ulib/pretty",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxcpp",
  ]
  data_deps = [
    ":firmware",
  ]
