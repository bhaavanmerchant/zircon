group("qemu") {
  deps = [
    ":qemu-audio",
  ]
}

driver("qemu-audio") {
  sources = [
    "binding.c",
    "qemu-codec.cpp",
    "qemu-stream.cpp",
  ]
  deps = [
    "$zx/system/ulib/audio-driver-proto",
    "$zx/system/ulib/audio-proto-utils",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/dispatcher-pool",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/intel-hda",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxcpp",
  ]
}
