import("$zx/kernel/params.gni")

group("pci") {
  deps = [
    ":bus-pci",
  ]
  if (!enable_user_pci) {
    deps += [ ":bus-pci.proxy" ]
  }
}

driver("bus-pci") {
  if (enable_user_pci) {
    sources = [
      "upci.c",
    ]
  } else {
    sources = [
      "kpci.c",
    ]
  }
  deps = [
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/zircon",
  ]
}

driver("bus-pci.proxy") {
  sources = [
    "proxy.c",
  ]
  deps = [
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/zircon",
  ]
}
