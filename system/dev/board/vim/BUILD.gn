driver("vim") {
  sources = [
    "vim-canvas.c",
    "vim-display.c",
    "vim-led2472g.c",
    "vim-mali.c",
    "vim-rtc.c",
    "vim-thermal.c",
    "vim-usb.c",
    "vim-video.c",
    "vim.c",
  ]
  deps += [
    ":shared",
    "$zx/system/dev/lib/amlogic",
    "$zx/system/dev/lib/broadcom",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
  ]
  if (false) {  #TODO
    metadata = {
      # The VIM has native ZBI support, so no extra image-packing is required.
      bootimage_script = "/bin/true"
    }
  }
}

source_set("shared") {
  visibility = [
    ":*",
    "$zx/system/dev/board/vim-machina:*",
  ]
  sources = [
    "vim-clk.c",
    "vim-eth.c",
    "vim-gpio.c",
    "vim-i2c.c",
    "vim-sd-emmc.c",
    "vim-sdio.c",
    "vim-uart.c",
  ]
  deps += [
    "$zx/system/dev/lib/amlogic",
    "$zx/system/dev/lib/broadcom",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
  ]
}
