driver("vim-machina") {
  sources = [
    "vim.c",
  ]
  include_dirs = [ "$zx/system/dev/board/vim" ]
  deps += [
    "$zx/system/dev/board/vim:shared",
    "$zx/system/dev/lib/amlogic",
    "$zx/system/ulib/ddk",
  ]
  if (false) {  #TODO
    metadata = {
      # The VIM has native ZBI support, so no extra image-packing is required.
      bootimage_script = "/bin/true"
    }
  }
}
