test("spawn") {
  sources = [
    "spawn.cpp",
  ]
  deps = [
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/unittest",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
  data_deps = [
    ":spawn-child",
    ":spawn-launcher",
  ]
}

executable("spawn-child") {
  visibility = [ ":*" ]
  testonly = true
  sources = [
    "child.c",
  ]
  deps = [
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/zircon",
  ]
}

executable("spawn-launcher") {
  visibility = [ ":*" ]
  testonly = true
  sources = [
    "launcher.c",
  ]
  deps = [
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/launchpad",
    "$zx/system/ulib/zircon",
  ]
}
