source_set("threads") {
  testonly = true
  sources = [
    "register-set.cpp",
    "threads.cpp",
  ]
  deps += [
    ":thread-functions",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/runtime",
    "$zx/system/ulib/unittest",
    "$zx/system/ulib/zircon",
  ]
