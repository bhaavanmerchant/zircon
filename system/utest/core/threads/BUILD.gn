source_set("thread-functions") {
  testonly = true
  visibility = [ ":*" ]
  sources = [
    "thread-functions/thread-functions.cpp",
  ]
  deps += [
    "$zx/public/gn/config:no_sanitizers",
    "$zx/system/ulib/runtime",
    "$zx/system/ulib/zircon",
  ]
}
