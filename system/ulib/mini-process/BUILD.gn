library("mini-process") {
  testonly = true
  shared = true
  sources = [
    "mini-process.c",
  ]
  deps = [
    ":subprocess",
    "$zx/system/ulib/elfload",
    "$zx/system/ulib/zircon",
  ]
}

source_set("subprocess") {
  visibility = [ ":*" ]
  testonly = true
  sources = [
    "subprocess.c",
  ]
  configs += [ "$zx/public/gn/config:no_sanitizers" ]
  deps = [
    ":headers",
    "$zx/system/ulib/zircon",
  ]
}
