library("bitmap") {
  kernel = true
  host = true
  sources = [
    "raw-bitmap.cpp",
    "rle-bitmap.cpp",
  ]
  public_deps = [
    "$zx/system/ulib/fbl:headers",
  ]
  if (!is_kernel && !is_host) {
    deps += [
      "$zx/system/ulib/c",
      "$zx/system/ulib/fbl",
      "$zx/system/ulib/zircon",
      "$zx/system/ulib/zx",
      "$zx/system/ulib/zxcpp",
    ]
  }
}
