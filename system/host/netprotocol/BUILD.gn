group("netprotocol") {
  deps = [
    ":netaddr",
    ":netcp",
    ":netls",
    ":netruncmd",
  ]
}

source_set("common") {
  sources = [
    "netprotocol.c",
  ]
}

host_tool("netruncmd") {
  sources = [
    "netruncmd.c",
  ]
  deps += [ ":common" ]
}

host_tool("netcp") {
  sources = [
    "netcp.c",
  ]
  deps += [
    ":common",
    "$zx/system/ulib/tftp",
  ]
}

host_tool("netls") {
  sources = [
    "netls.c",
  ]
  deps += [ ":common" ]
}

host_tool("netaddr") {
  sources = [
    "netaddr.c",
  ]
  deps += [ ":common" ]
}
