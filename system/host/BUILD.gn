# This covers all the host tools intended to be used directly by developers.
# Not listed here are tools whose only use is via GN rules in this build,
# such as abigen.
group("tools") {
  testonly = true
  deps = [
    "$zx/third_party/uapp/mkfs-msdosfs",
    "blobfs",
    "bootserver",
    "fidl:tools",
    "fvm",
    "kernel-buildsig",
    "loglistener",
    "merkleroot",
    "minfs",
    "netprotocol",
    "runtests",
    "xdc-server",
    "zbi",
  ]
}
