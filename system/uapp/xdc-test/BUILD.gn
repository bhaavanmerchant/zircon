executable("xdc-test") {
  sources = [
    "xdc-device.cpp",
    "xdc-test.cpp",
  ]
  deps += [
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxcpp",
  ]
}

host_tool("xdc-test-host") {
  sources = [
    "xdc-host.cpp",
    "xdc-test.cpp",
  ]
  deps += [
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/xdc-host-utils",
    "$zx/system/ulib/xdc-server-utils",
  ]
}
